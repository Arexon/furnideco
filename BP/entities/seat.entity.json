{
	"format_version": "1.17.0",
	"minecraft:entity": {
		"description": {
			"identifier": "furnideco:seat",
			"is_spawnable": false,
			"is_summonable": true,
			"properties": {
				"p:seat_type": {
					"type": "enum",
					"values": [
						"rustic_chair",
						"rustic_rocking_chair",
						"rustic_stool",
						"rustic_sofa"
					],
					"default": "rustic_chair"
				}
			},
			"aliases": {
				"furnideco:seat.rustic_chair": {
					"p:seat_type": "rustic_chair"
				},
				"furnideco:seat.rustic_rocking_chair": {
					"p:seat_type": "rustic_rocking_chair"
				},
				"furnideco:seat.rustic_stool": {
					"p:seat_type": "rustic_stool"
				},
				"furnideco:seat.rustic_sofa": {
					"p:seat_type": "rustic_sofa"
				}
			}
		},
		"do_not_upgrade": {},
		"permutations": [
			{
				"condition": "q.property('p:seat_type') == 'rustic_chair'",
				"components": {
					"minecraft:rideable": {
						"seat_count": 1,
						"family_types": [
							"player"
						],
						"seats": [
							{
								"position": [
									0,
									-0.13,
									-0.15
								]
							}
						]
					}
				}
			},
			{
				"condition": "q.property('p:seat_type') == 'rustic_rocking_chair'",
				"components": {
					"minecraft:rideable": {
						"seat_count": 1,
						"family_types": [
							"player"
						],
						"seats": [
							{
								"position": [
									0,
									-0.2,
									-0.12
								]
							}
						]
					}
				}
			},
			{
				"condition": "q.property('p:seat_type') == 'rustic_stool'",
				"components": {
					"minecraft:rideable": {
						"seat_count": 1,
						"family_types": [
							"player"
						],
						"seats": [
							{
								"position": [
									0,
									-0.07,
									0
								]
							}
						]
					}
				}
			},
			{
				"condition": "q.property('p:seat_type') == 'rustic_sofa'",
				"components": {
					"minecraft:rideable": {
						"seat_count": 1,
						"family_types": [
							"player"
						],
						"seats": [
							{
								"min_rider_count": 0,
								"max_rider_count": 1,
								"position": [
									0,
									-0.25,
									-0.07
								]
							}
						]
					}
				}
			}
		],
		"component_groups": {
			"g:detect_rider": {
				"minecraft:environment_sensor": {
					"triggers": {
						"filters": {
							"test": "rider_count",
							"value": 0
						},
						"event": "e:remove"
					}
				}
			},
			"g:remove": {
				"minecraft:instant_despawn": {}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": [
					"furnideco",
					"seat"
				]
			},
			"minecraft:collision_box": {
				"width": 0,
				"height": 0
			},
			"minecraft:fire_immune": true,
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"deals_damage": false
					}
				]
			},
			"minecraft:timer": {
				"looping": false,
				"time": [
					0,
					0
				],
				"time_down_event": {
					"event": "e:add.rider"
				}
			}
		},
		"events": {
			"e:set.direction.north": {
				"run_command": {
					"command": "tp ~~~ 0"
				}
			},
			"e:set.direction.east": {
				"run_command": {
					"command": "tp ~~~ 180"
				}
			},
			"e:set.direction.south": {
				"run_command": {
					"command": "tp ~~~ 270"
				}
			},
			"e:set.direction.west": {
				"run_command": {
					"command": "tp ~~~ 90"
				}
			},
			"e:add.rider": {
				"add": {
					"component_groups": [
						"g:detect_rider"
					]
				},
				"run_command": {
					"command": "ride @p[r=2.5] start_riding @s teleport_rider"
				}
			},
			"e:remove": {
				"add": {
					"component_groups": [
						"g:remove"
					]
				}
			}
		}
	}
}
